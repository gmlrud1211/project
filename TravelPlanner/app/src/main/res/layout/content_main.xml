<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.db_14.travelplanner.MainUIActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/best"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/best"
        android:text="베스트여행지"
        android:onClick="onClick"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <!--  2째줄 -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/tour"
            android:text="관광지"
            android:onClick="onClick"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/food"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/food"
            android:text="음식점"
            android:onClick="onClick"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold"/>
    </TableRow>

    <!--3번째줄 -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/room"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/room"
            android:text="숙박"
            android:onClick="onClick"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:layout_weight="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recommend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="onClick"
            android:background="@drawable/recommend"
            android:text="추천코스"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/festival"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:gravity="center"
            android:background="@drawable/festival"
            android:text="축제"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="onClick"
            android:layout_weight="1"
            android:background="@drawable/review"
            android:text="리뷰"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold" />
    </TableRow>

</LinearLayout>
