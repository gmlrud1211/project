<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#4ba8ff"
        android:textSize="20dp"
        android:text="여행 지출정보"
        android:textColor="#ffffff"
        android:gravity="center"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="지출 내역"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/bill_title"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:textSize="15dp"
            android:hint="지출 내역"
            android:gravity="center"
            android:layout_margin="20dp"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="금액"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/bill_price"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:textSize="15dp"
            android:hint="금액"
            android:inputType="number"
            android:gravity="center"
            android:layout_margin="20dp"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/billDate"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:background="@drawable/date_selector"
            android:text="Click to add To date" />
    </TableRow>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bill_add_btn"
        android:text="완료"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4ba8ff"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:layout_gravity="center"/>

</LinearLayout>